<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKonten">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboard1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/back_btn"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnFav"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/bookmark"
            app:tint="@android:color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g_55"
        app:shapeAppearanceOverlay="@style/bg_rounded_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                app:layout_constraintBottom_toTopOf="@+id/btn_to_maps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ipukan Highland"
                        android:textColor="@android:color/black"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/location"
                        android:drawablePadding="4dp"
                        android:text=" Palutungan, Kuningan"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDetailsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Details"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDetailsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan. Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan.Ipukan Highland merupakan tempat wisata yang terletak di dataran tinggi Kuningan."
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/btn_to_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Maps"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/blue"
                android:layout_marginBottom="16dp"
                style="@style/btn_to_maps"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>