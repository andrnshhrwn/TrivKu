<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".OnboardThree">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g_55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ob3_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/onboard3"
        app:shapeAppearanceOverlay="@style/BottomRadiusImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/g_55" />

    <TextView
        android:id="@+id/ob3_title"
        style="@style/title_onboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Daftar Favoritmu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/g_55" />

    <TextView
        android:id="@+id/ob_3_detail"
        style="@style/detail_onboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan destinasi favorit dan akses dengan cepat kapan saja. Mulai petualanganmu menjelajahi Kuningan!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ob3_title" />
    <Button
        style="@style/ob_button"
        android:id="@+id/ob3_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>